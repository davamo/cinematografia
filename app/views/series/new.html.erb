<h1>Nueva Serie</h1>

<%= form_with(model: @serie, url: series_path) do |form| %>
  <% if @serie.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@serie.errors.count, "error") %> impidieron guardar esta serie:</h2>

      <ul>
        <% @serie.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :synopsis %>
    <%= form.text_area :synopsis %>
  </div>

  <div class="field">
    <%= form.label :director %>
    <%= form.text_field :director %>
  </div>

  <div class="actions">
    <%= form.submit 'Guardar' %>
  </div>
<% end %>

<%= link_to 'Volver a la lista', series_path %>
